<Window x:Class="Quick_Image_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quick_Image_Viewer"
        mc:Ignorable="d"
        Title="Quick Image Viewer" Height="400" Width="400" MinHeight="400" MinWidth="400" ResizeMode="CanResize">
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="File:" VerticalAlignment="Top"/>
        <TextBox x:Name="FilePathInput" Margin="36,10,48,0" TextWrapping="Wrap" Text="/mpv-shot0001.png" VerticalAlignment="Top" MinWidth="316"/>
        <Button x:Name="OpenBtn" Content="Open" HorizontalAlignment="Right" Margin="0,9,10,0" VerticalAlignment="Top" RenderTransformOrigin="4.951,-4.061" Click="OpenFileHandler"/>
        
        <Image x:Name="ImageOutput" Margin="10,35,10,10" Source="/CIMG1245.jpg"  Stretch="Uniform" StretchDirection="Both"/>

    </Grid>
</Window>
